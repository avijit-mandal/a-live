<%- model_class = Chapter -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
  <%= link_to 'Book List',
              books_path, :class => 'btn btn-default' %>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @chapter.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:content) %>:</strong></dt>
  <dd><%= @chapter.content %></dd>
  <dt><strong><%= model_class.human_attribute_name(:chapter_index) %>:</strong></dt>
  <dd><%= @chapter.chapter_index %></dd>
  <dt><strong><%= model_class.human_attribute_name(:book_id) %>:</strong></dt>
  <dd><%= @chapter.book_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              book_chapters_path(@book), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_book_chapter_path(@book, @chapter), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              book_chapter_path(@book, @chapter),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<%= link_to 'Book List',
              books_path, :class => 'btn btn-default'  %>